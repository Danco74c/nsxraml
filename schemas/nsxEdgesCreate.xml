<edge>
    <datacenterMoid>mandatory</datacenterMoid>
    <name>optional</name>
    <description>optional</description>
    <tenant>optional</tenant>
    <fqdn>optional</fqdn>
    <vseLogLevel>INFO|EMERGENCY|ALERT|CRITICAL|ERROR|WARNING|NOTICE|DEBUG</vseLogLevel>
    <enableAesni>true|false</enableAesni>
    <enableFips>true|false</enableFips>
    <appliances>
        <applianceSize>compact|large|xlarge|quadlarge</applianceSize>
        <enableCoreDump>true|false</enableCoreDump>
        <appliance>
            <resourcePoolId>mandatory</resourcePoolId>
            <datastoreId>mandatory</datastoreId>
            <hostId>optional</hostId>
            <vmFolderId>optional</vmFolderId>
            <customField>
                <key>optional</key>
                <value>optional</value>
            </customField>
            <cpuReservation>
                <limit>optional</limit>
                <reservation>optional</reservation>
                <shares>optional</shares>
            </cpuReservation>
            <memoryReservation>
                <limit>optional</limit>
                <reservation>optional</reservation>
                <shares>optional</shares>
            </memoryReservation>
        </appliance>
    </appliances>
    <vnics> 
        <vnic>
            <index>mandatory</index>
            <name>optional</name>
            <type>optional</type>
            <portgroupId>mandatory</portgroupId>
            <addressGroups>
                <addressGroup>
                    <primaryAddress>mandatory</primaryAddress>
                    <secondaryAddresses>
                        <ipAddress>optional</ipAddress>
                    </secondaryAddresses>
                    <subnetMask>mandatory</subnetMask>
                </addressGroup>
            </addressGroups>
            <macAddress>
                <edgeVmHaIndex>0</edgeVmHaIndex>
                <value>optional</value>
            </macAddress>
            <fenceParameter>
                <key>optional</key>
                <value>optional</value>
            </fenceParameter>
            <mtu>optional</mtu>
            <enableProxyArp>true|false</enableProxyArp>
            <enableSendRedirects>true|false</enableSendRedirects>
            <isConnected>true|false</isConnected>
            <inShapingPolicy>
                <averageBandwidth>optional</averageBandwidth>
                <peakBandwidth>optional</peakBandwidth>
                <burstSize>optional</burstSize>
                <enabled>true|false</enabled>
                <inherited>true|false</inherited>
            </inShapingPolicy>
            <outShapingPolicy>
                <averageBandwidth>optional</averageBandwidth>
                <peakBandwidth>optional</peakBandwidth>
                <burstSize>optional</burstSize>
                <enabled>true|false</enabled>
                <inherited>true|false</inherited>
            </outShapingPolicy>
        </vnic>
    </vnics>
    <cliSettings>
        <userName>optional</userName>
        <password>optional</password>
        <remoteAccess>true|false</remoteAccess>
    </cliSettings>
    <autoConfiguration>
        <enabled>true|false</enabled>
        <rulePriority>optional</rulePriority>
    </autoConfiguration>
    <dnsClient>
        <primaryDns>optional</primaryDns>
        <secondaryDns>optional</secondaryDns>
        <domainName>optional</domainName>
    </dnsClient>
    <queryDaemon>
        <enabled>true|false</enabled>
        <port>optional</port>
    </queryDaemon>
</edge>
