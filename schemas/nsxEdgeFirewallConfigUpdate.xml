<firewall>
    <defaultPolicy>
        <action>optional</action>
        <loggingEnabled>true|false</loggingEnabled>
    </defaultPolicy>
    <globalConfig>
        <tcpPickOngoingConnections>true|false</tcpPickOngoingConnections>
        <tcpAllowOutOfWindowPackets>true|false</tcpAllowOutOfWindowPackets>
        <tcpSendResetForClosedVsePorts>true|false</tcpSendResetForClosedVsePorts>
        <dropInvalidTraffic>true|false</dropInvalidTraffic>
        <logInvalidTraffic>true|false</logInvalidTraffic>
        <tcpTimeoutOpen>optional</tcpTimeoutOpen>
        <tcpTimeoutEstablished>optional</tcpTimeoutEstablished>
        <tcpTimeoutClose>optional</tcpTimeoutClose>
        <udpTimeout>optional</udpTimeout>
        <icmpTimeout>optional</icmpTimeout>
        <icmp6Timeout>optional</icmp6Timeout>
        <ipGenericTimeout>optional</ipGenericTimeout>
    </globalConfig>
    <rules>
        <rule>
            <ruleTag>optional</ruleTag>
            <name>optional</name>
            <source>
                <vnicGroupId>optional</vnicGroupId>
                <groupingObjectId>optional</groupingObjectId>
                <ipAddress>optional</ipAddress>
            </source>
            <destination>
                <groupingObjectId>optional</groupingObjectId>
                <vnicGroupId>optional</vnicGroupId> 
                <groupingObjectId>optional</groupingObjectId>
                <ipAddress>optional</ipAddress>
            </destination>
            <application>
                <applicationId>optional</applicationId>
                <service>
                    <protocol>optional</protocol>
                    <port>optional</port>
                    <sourcePort>optional</sourcePort>
                </service>
            </application>
            <matchTranslated>true|false</matchTranslated>
            <direction>in|out</direction>
            <action>accept|deny|reject</action>
            <enabled>true|false</enabled>
            <loggingEnabled>true|false</loggingEnabled>
            <description>optional</description>
        </rule>
    </rules>
</firewall>
